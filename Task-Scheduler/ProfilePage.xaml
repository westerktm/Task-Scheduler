<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Task_Scheduler.ProfilePage"
             Title="Профиль">

<ScrollView>
    <Grid Padding="20"
              BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource OffBlack}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0"
                         Spacing="10"
                         HorizontalOptions="Center"
                         Margin="0,10,0,20">
            <Grid HorizontalOptions="Center">
                <Image x:Name="ProfileAvatarImage"
                           Source="{AppThemeBinding Light=avatar.png, Dark=avatarblacktheme.png}"
                           WidthRequest="100"
                           HeightRequest="100"
                           MinimumWidthRequest="80"
                           MinimumHeightRequest="80"
                           Margin="0,0,0,10" />
                <ImageButton Source="edit.png"
                                 WidthRequest="24"
                                 HeightRequest="24"
                                 BackgroundColor="Transparent"
                                 HorizontalOptions="End"
                                 VerticalOptions="End"
                                 Margin="76,0,0,10"
                                 Clicked="OnEditAvatarProfileClicked" />
            </Grid>

        </StackLayout>

        <!-- Прямоугольник с именем под аватаром -->
        <Frame Grid.Row="1"
                   CornerRadius="16"
                   Padding="20,10"
                   Margin="10,0,10,20"
                   MinimumWidthRequest="200"
                   MaximumWidthRequest="300"
                   HeightRequest="40"
                   HorizontalOptions="Center"
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
            <Label x:Name="UserNameLabel"
                       Text=""
                       FontSize="15"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                       HorizontalOptions="Center" />
        </Frame>

        <!-- Статистика задач / графики -->
            <Frame Grid.Row="2"
                   x:Name="TaskChartsArea"
                   Margin="0,0,0,20"
                   Padding="12"
                   CornerRadius="12"
                   HorizontalOptions="Fill"
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
                <StackLayout Spacing="8">
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="CenterAndExpand"
                                 Spacing="8">
                        <Label Text="Статистика задач"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                        <Label Text="Редактировать"
                               FontSize="13"
                               TextDecorations="Underline"
                               TextColor="{AppThemeBinding Light={DynamicResource AccentLight}, Dark={DynamicResource AccentDark}}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEditChartsTapped" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <StackLayout x:Name="ChartsDropdown"
                                 IsVisible="False"
                                 Spacing="4"
                                 Margin="0,0,0,8">
                        <Label Text="Линейный график"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnChartOptionTapped" CommandParameter="Line" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Кольцевая диаграмма"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnChartOptionTapped" CommandParameter="Donut" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Тепловая карта активности"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnChartOptionTapped" CommandParameter="Heatmap" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Столбчатая по категориям"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnChartOptionTapped" CommandParameter="Bar" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <Grid x:Name="TaskChartsContainer"
                          HeightRequest="140"
                          MinimumHeightRequest="100" />
                </StackLayout>
            </Frame>

            <!-- Кнопка выхода из аккаунта -->
            <Button Grid.Row="3"
                    Text="Выйти из аккаунта"
                    BackgroundColor="#FF5252"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="20,10"
                    Margin="0,0,0,10"
                    HorizontalOptions="Fill"
                    Clicked="OnLogoutClicked" />
    </Grid>
</ScrollView>

</ContentPage>
